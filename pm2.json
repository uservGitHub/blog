{
  "apps": [{
    "name": "blog",
    "script": "./dist/server/main.js",
    "log_date_format": "YYYY-MM-DD HH:mm Z",
    "out_file": "./logs/app.log",
    "error_file": "./logs/error.log",
    "pid_file": "./logs/blog.pid",
    "ignoreWatch": ["[\\/\\\\]\\./", "node_modules", "src", "test"],
    "watch": "true",
    "exec_mode": "fork",
    "env": {
      "NODE_ENV": "production"
    }
  }]
}
